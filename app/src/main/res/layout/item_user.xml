<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/grey"
    android:padding="6dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" abhihek"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4500"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="19sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/constraintLayout"/>

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_phone"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/userNameText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/phoneNumberTextUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="987456321"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/phoneIcon"
            app:layout_constraintLeft_toRightOf="@id/phoneIcon"
            app:layout_constraintBottom_toBottomOf="@id/phoneIcon"/>

        <ImageView
            android:id="@+id/iconAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/addedAmountText"
            app:layout_constraintBottom_toBottomOf="@id/addedAmountText"
            app:layout_constraintRight_toLeftOf="@id/addedAmountText"/>

        <TextView
            android:id="@+id/addedAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4500"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balanceText"
            app:layout_constraintRight_toRightOf="@id/constraintLayout"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>