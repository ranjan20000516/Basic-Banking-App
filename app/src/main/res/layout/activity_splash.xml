<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".ui.SplashActivity">

    <RelativeLayout
        android:id="@+id/lineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/firstLine"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:background="@drawable/green_line"
            android:layout_centerHorizontal="true"/>


        <View
            android:id="@+id/secondLine"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/firstLine"/>


        <View
            android:id="@+id/thirdLine"
            android:layout_width="20dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/purple_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/secondLine"/>


        <View
            android:id="@+id/fourthLine"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/thirdLine"/>

        <View
            android:id="@+id/fifthLine"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fourthLine"/>

        <View
            android:id="@+id/sixthLine"
            android:layout_width="20dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/purple_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fifthLine"/>


        <View
            android:id="@+id/seventhLine"
            android:layout_width="20dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_line"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/sixthLine"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/splashLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/ic_social_media"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/madeBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:text="Designed by Ranjan Kumar Das"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>


</LinearLayout>